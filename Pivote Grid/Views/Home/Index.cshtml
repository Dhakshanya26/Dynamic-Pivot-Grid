@using Privote_Grid.Models
@{
    ViewBag.Title = "Home Page";
}
@model Privote_Grid.Models.DynamicGridModel
<div id="dynamic_grid_container">
 
    <div class="row" id="pivote-wrapper">
        @Html.Partial("_Pivote",Model)
    </div>
 @section scripts{
     <script src="~/Scripts/jquery-1.10.2.min.js"></script>
     <script src="~/Scripts/knockout-3.4.2.js"></script>
     <script src="~/Scripts/knockout.validation.js"></script>
     <script src="~/Scripts/DynamicGrid.js"></script>
     <script>
         $(function() {
             ko.applyBindings(new PivoteModel(@Html.Raw(Json.Encode(Model))),
                 document.getElementById("pivote-wrapper"));
             if ($("#pivote-table").length > 0) {
                 var numCols = $("#pivote-table").find('tr')[0].cells.length;
                 $('tfoot tr td').attr('colspan', numCols.toString());
             }
         });
     </script>
 }
</div>

 